{
  "name": "js-game-engine",
  "version": "1.0.0",
  "type": "module",
  "description": "A modular 3D game engine with Android export capabilities",
  "scripts": {
    "dev": "vite",
    "build": "node core/tools/build.js",
    "build:web": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron electron/main.js",
    "electron:build": "npm run build && node core/tools/build-electron.js",
    "electron:build:win": "npm run build && node core/tools/build-electron.js --win",
    "electron:build:linux": "npm run build && node core/tools/build-electron.js --linux",
    "electron:build:all": "npm run build && node core/tools/build-electron.js --win --linux",
    "android": "npm run build && cap sync android && cap open android",
    "android:build": "npm run build && cap sync android",
    "android:apk": "npm run build && cap sync android && cd android && gradlew.bat assembleDebug",
    "build:all": "npm run clean && npm run build && npx cap sync android && cd android && gradlew.bat assembleDebug && cd ..",
    "process:models": "node core/tools/gltfjsx/process-models.js",
    "process:models:transform": "node core/tools/gltfjsx/process-models.js --transform true --types true",
    "docs": "echo Documentation is in core/docs/ folder. See core/docs/README.md for main docs.",
    "ios": "npm run build && cap sync ios && cap open ios",
    "cap:sync": "cap sync",
    "cap:add:android": "cap add android",
    "cap:add:ios": "cap add ios",
    "clean": "node core/tools/clean.js",
    "clean:builds": "node core/tools/clean.js"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@react-three/drei": "^9.114.3",
    "@react-three/fiber": "^8.17.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.169.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.169.0",
    "@vitejs/plugin-react": "^4.3.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "gltfjsx": "^6.5.3",
    "terser": "^5.44.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.11"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.jsengine.game",
    "productName": "JS Game Engine",
    "directories": {
      "output": "build/electron-dist"
    },
    "files": [
      "dist/**/*",
      "electron/main.js",
      "electron/preload.js",
      "package.json"
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
